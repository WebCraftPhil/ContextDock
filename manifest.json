{
  "manifest_version": 3,
  "name": "ContextDock",
  "version": "0.1.0",
  "description": "Save reusable prompts and inject them into ChatGPT-like interfaces.",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "webNavigation",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://perplexity.ai/*",
    "https://gemini.google.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://perplexity.ai/*",
        "https://gemini.google.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {},
  "commands": {
    "trigger-context-dock": {
      "suggested_key": {
        "default": "Ctrl+K",
        "mac": "Command+K"
      },
      "description": "Insert a saved ContextDock prompt"
    }
  }
}

